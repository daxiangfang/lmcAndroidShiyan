<menu xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 搜索框 -->
    <item
        android:id="@+id/menu_search"
        android:title="@string/menu_search"
        android:icon="@drawable/ic_menu_search"
        app:showAsAction="ifRoom|collapseActionView"
        app:actionViewClass="androidx.appcompat.widget.SearchView" />

    <!-- 添加新笔记 -->
    <item
        android:id="@+id/menu_add"
        android:icon="@drawable/ic_menu_compose"
        android:title="@string/menu_add"
        android:alphabeticShortcut="a"
        app:showAsAction="always" />

    <!-- 粘贴功能 -->
    <item
        android:id="@+id/menu_paste"
        android:icon="@drawable/ic_menu_compose"
        android:title="@string/menu_paste"
        android:alphabeticShortcut="p" />

    <!-- 切换主题 -->
    <item
        android:id="@+id/menu_theme"
        android:title="@string/menu_theme"
        android:icon="@drawable/background_flag"
        app:showAsAction="never" />

    <!-- 更换背景 -->
    <item
        android:id="@+id/menu_change_background"
        android:title="@string/menu_change_background"
        android:icon="@drawable/default_background"
        app:showAsAction="never" />






</menu>
